{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "lib": [
      "ES2015"
    ],
    "allowJs": true,
    "sourceMap": true,
    "outDir": ".build",
    "rootDir": "./",
    "removeComments": true,
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noUnusedLocals": true,
    "moduleResolution": "node",
    "baseUrl": ".",
    "paths": {
      "@components/*": [
        "./src/components/*"
      ],
      "@modules/*": [
        "./src/modules/*"
      ],
      "@lib/*": [
        "./src/lib/*"
      ]
    },
    "plugins": [
      {
        "transform": "ts-transformer-imports"
      }
    ],
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "preserveConstEnums": true
  }
}
